<Window x:Class="z2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:z2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите секунды:" VerticalAlignment="Center" HorizontalAlignment="Center" Height="67" Margin="126,52,119,20" Width="151"/>
        <TextBox Grid.Column="1" Name="NumberA"/>
        <Button Grid.Row="1" Content="Вычислить" Click="Button_Click" Grid.ColumnSpan="2" />
        <TextBox Name="Resul" Grid.Row="2" IsReadOnly="True" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
